<!DOCTYPE html>
<html lang="en" data-theme="<%= theme %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= novel.title %> - WebWriter</title>
  <link rel="stylesheet" href="/css/style.css">
  
  <% 
    const bgSettings = typeof backgroundSettings !== 'undefined' ? backgroundSettings : { enabled: false, url: '', opacity: 0.3, editorEnabled: false };
    const shouldShowBg = bgSettings.enabled && bgSettings.url;
  %>
  
  <% if (shouldShowBg) { %>
  <style>
    body {
      background-image: url('<%= bgSettings.url %>') !important;
      background-size: cover !important;
      background-position: center !important;
      background-repeat: no-repeat !important;
      background-attachment: fixed !important;
    }
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--bg-primary);
      opacity: <%= 1 - parseFloat(bgSettings.opacity) %>;
      pointer-events: none;
      z-index: -1;
    }
  </style>
  <% } %>
</head>
<body>
  <% if (user) { %>
  <nav class="navbar">
    <div class="nav-content">
      <a href="/novels" class="nav-brand">WebWriter</a>
      <ul class="nav-links">
        <li><a href="/novels">Novels</a></li>
        <li><a href="/analytics">Analytics</a></li>
        <li><a href="/backups">Backups</a></li>
        <li><a href="/settings">Settings</a></li>
        <li><button id="themeToggle" class="theme-toggle">üåì</button></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
  <% } %>
  
  <div class="container">
    <div class="novel-detail-header">
      <img src="<%= novel.cover %>" alt="<%= novel.title %>" class="novel-detail-cover">
      <div class="novel-detail-info">
        <h1 class="novel-detail-title"><%= novel.title %></h1>
        <% if (typeof isRemote !== 'undefined' && isRemote) { %>
          <span class="remote-badge" style="display: inline-block; margin-bottom: 1rem;">Remote (Lite Writer)</span>
        <% } %>
        <p class="novel-detail-synopsis"><%= novel.synopsis %></p>
        <div class="novel-actions">
          <% if (!isRemote) { %>
            <button type="button" class="btn btn-secondary" id="editNovelBtn">Edit Info</button>
            <button type="button" class="btn btn-danger" id="deleteNovelBtn">Delete Novel</button>
          <% } %>
        </div>
      </div>
    </div>
    
    <% structure.forEach(book => { %>
      <div class="book-section">
        <div class="book-header" data-book="<%= book.name %>">
          <div>
            <div class="book-title"><%= book.name %></div>
            <div class="book-stats"><%= book.chapters.length %> chapters</div>
          </div>
          <% if (!isRemote) { %>
            <div style="display: flex; gap: 0.5rem;">
              <button type="button" class="btn btn-primary create-chapter-btn" data-book="<%= book.name %>">+</button>
              <% if (book.name !== 'Main') { %>
                <button type="button" class="btn btn-danger btn-icon delete-book-btn" data-book="<%= book.name %>" title="Delete Book">üóëÔ∏è</button>
              <% } %>
            </div>
          <% } %>
        </div>
        
        <div class="chapters-list">
          <% book.chapters.forEach(chapter => { %>
            <div class="chapter-item-wrapper" style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
              <a href="/editor/<%= novel.id %>/<%= book.name %>/<%= chapter.name %><%= isRemote ? '?remote=1' : '' %>" class="chapter-item" style="flex: 1; margin-bottom: 0;">
                <div class="chapter-info">
                  <div class="chapter-name"><%= chapter.name %></div>
                  <div class="chapter-meta">
                    <%= chapter.wordCount %> words ¬∑ Last edited: <%= new Date(chapter.lastModified).toLocaleString() %>
                  </div>
                </div>
              </a>
              <% if (!isRemote && !(book.name === 'Main' && chapter.name === 'Synopsis')) { %>
                <button type="button" class="btn btn-danger btn-icon delete-chapter-btn" data-book="<%= book.name %>" data-chapter="<%= chapter.name %>" title="Delete Chapter">üóëÔ∏è</button>
              <% } %>
            </div>
          <% }) %>
        </div>
      </div>
    <% }) %>
    
    <% if (!isRemote) { %>
      <button type="button" class="btn btn-secondary mt-4" id="createBookBtn">+ Add Book</button>
    <% } %>
  </div>
  
  <% if (!isRemote) { %>
  <!-- Edit Novel Modal -->
  <div id="editNovelModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Edit Novel</h2>
        <button type="button" class="modal-close" id="closeEditNovelBtn">&times;</button>
      </div>
      
      <form id="editNovelForm" enctype="multipart/form-data">
        <div class="form-group">
          <label for="editTitle" class="form-label">Title</label>
          <input type="text" id="editTitle" name="title" class="form-input" value="<%= novel.title %>" required>
        </div>
        
        <div class="form-group">
          <label for="editSynopsis" class="form-label">Synopsis</label>
          <textarea id="editSynopsis" name="synopsis" class="form-textarea"><%= novel.synopsis %></textarea>
        </div>
        
        <div class="form-group">
          <label for="editCover" class="form-label">Cover Image</label>
          <input type="file" id="editCoverInput" name="cover" class="form-input" accept="image/*">
          <img id="editCoverPreview" src="<%= novel.cover %>" style="max-width: 200px; margin-top: 1rem;">
        </div>
        
        <div class="flex gap-2">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <button type="button" class="btn btn-secondary" id="cancelEditNovelBtn">Cancel</button>
        </div>
      </form>
    </div>
  </div>
  <% } %>
  
  <!-- Custom Prompt Modal -->
  <div id="promptModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="promptTitle">Enter Value</h2>
        <button type="button" class="modal-close" id="closePromptBtn">&times;</button>
      </div>
      
      <div class="form-group">
        <label for="promptInput" class="form-label" id="promptLabel">Name</label>
        <input type="text" id="promptInput" class="form-input" required>
      </div>
      
      <div class="flex gap-2">
        <button type="button" class="btn btn-primary" id="promptOkBtn">OK</button>
        <button type="button" class="btn btn-secondary" id="promptCancelBtn">Cancel</button>
      </div>
    </div>
  </div>
  
  <!-- Custom Confirm Modal -->
  <div id="confirmModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Confirm Action</h2>
        <button type="button" class="modal-close" id="closeConfirmBtn">&times;</button>
      </div>
      
      <p id="confirmMessage" style="margin-bottom: 2rem; color: var(--text-primary);"></p>
      
      <div class="flex gap-2">
        <button type="button" class="btn btn-danger" id="confirmOkBtn">Confirm</button>
        <button type="button" class="btn btn-secondary" id="confirmCancelBtn">Cancel</button>
      </div>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
  <script src="/js/novel-detail.js"></script>
  <script>
    window.novelId = '<%= novel.id %>';
  </script>
</body>
</html>
